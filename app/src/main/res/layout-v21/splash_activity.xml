<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"></RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="10dp">

        <com.github.jorgecastillo.FillableLoader
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:fl_clippingTransform="waves"
            app:fl_fillColor="@color/colorPrimary"
            app:fl_fillDuration="1000"
            app:fl_originalHeight="515"
            app:fl_originalWidth="522"
            app:fl_strokeColor="@color/colorPrimaryDark"
            app:fl_strokeDrawingDuration="2000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingBottom="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp">

        <com.github.jorgecastillo.FillableLoader
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:fl_clippingTransform="plain"
            app:fl_fillColor="@color/colorPrimary"
            app:fl_fillDuration="2000"
            app:fl_originalHeight="126"
            app:fl_originalWidth="679"
            app:fl_strokeColor="@color/colorPrimaryDark"
            app:fl_strokeDrawingDuration="2000" />
    </RelativeLayout>
</LinearLayout>
